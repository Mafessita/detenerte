 ﻿<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="metienemal.MainPage">

    <ScrollView>

        <VerticalStackLayout>
            <Label Text="Welcome to MAUI .NET App" 
               FontSize="24" 
               HorizontalOptions="Center" 
               VerticalOptions="StartAndExpand"/>

            <Button Text="Press Me!" 
                Clicked="OnButtonClicked" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand"/>

            <Button Text="Ir a pagina"
        Clicked="OnNavigateButtonClicked"
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand"/>


            <Button Text="New Button from Collaborator"
                Clicked="OnNewButtonClicked"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"/>

            <Button Text="Abrir sitio Web"
        Clicked="OnOpenWebsiteButtonClicked"
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand"/>
            <Button Text="Change Background Color"
        Clicked="OnChangeColorButtonClicked"
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand"/>























        </VerticalStackLayout>
        
        
        
        
        
        
 
    </ScrollView>

</ContentPage>